/* Crikey Handheld Device Template */


/* Hide these divs */


	.advert, 
	#topAdd, 
	#breadcrumbs, 
	#logoGuy,
	#rememberPass,
	#topNav,
	#mainNav,
	#leftAdds {
		display: none;
		}
		
		
	#rightSpecial img {
		display: none;
		}
	
/* Move some stuff around */

	body {
		padding: 10px;
		font-family: Arial, Helvetica, sans-serif;
		font-size: 12px;
		}
	
	#container {
		width: 180px;
		text-align: left!important;
		}
		
	#header {
		margin-bottom: 120px;
		}
	
	#logo img {
		width: 60%;
		height: 60%;
		}
		
	#center {
		width: auto;
		padding: 0;
		margin: 0;
		}

	#content {
		width: auto;
		position: relative;
		margin-top: 220px;
		border-top: 1px solid #ccc;
		}
	
	#article {
		margin: 0;
		}
		
	dd {
		margin: 0;
		padding: 0;
		}
	
	#theInformation {
		margin-top: 30px;
		}	
		
	#topStories {
		width: auto;
		}
		
	#footer {
		position: absolute;
		width: 100px;
		top: -220px;
		margin: 0;
		padding: 0;
		text-align: left;
		}
	
	#footer a {
		float: none;
		display: block;
		margin: 0 5px;
		}
		
	#footer a:hover {
		color: #fff;
		background-color: #ff0000;
		}
	
	#copyright {
		display: none;
		width: 150px;
		margin: 0;
		padding: 0;
		}

/* Text */

	a {
		color: #FF0000;
		}
		
	a img {
		border: 0;
		}
	
	
	h1 {
		font-size: .9em;
		color: #FF0000;
		}
		
	h2 {
		font-size: .8em;
		color: #FF0000;
		}
		
		
		
		