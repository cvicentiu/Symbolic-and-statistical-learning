/* Crikey Print Template */

@import "index.css";
@import "content.css";


/* Hide these divs */


	#left, 
	#right, 
	.advert, 
	#topNav, 
	#mainNav, 
	#topAdd, 
	#footer, 
	#breadcrumbs, 
	#contentLinks,
	#logoGuy,
	#textSize,
	#subscribeTop,
	.formHeading {
		display: none!important;
		}
		
	
/* Move some stuff around */

	body {
		padding: 10px;
		}
	
	#center {
		width: auto;
		padding: 0!important;
		margin: 0!important;
		}

	#content {
		width: auto;
		margin-top: 10px;
		border-top: 1px solid #ccc;
		}
	
	#article {
		margin: 0;
		}
		
	#logo{
		position: relative;
		margin: 10px 0 0;
		width: 120px;
		}
		
	 #home #logo{
		position: relative;
		margin: 0;
		padding: 0 0 0 10px;
		width: 180px;
		}
		
	#topStories {
		width: auto;
		}
		
	.subscribe {
		margin: 0!important;	
		}		
		
	.subscribe .fullWidth {
		border: none;
		margin: 0!important;	
		}
		
	.subscribe #tblPurchaseOptions {
		width: 500px!important;	
		}				
		
		
/* SIFR */

	.sIFR-flash, .sIFR-flash object, .sIFR-flash embed {
		display: none!important;
		height: 0;
		width: 0;
		position: absolute;
		overflow: hidden;
		}
	
	span.sIFR-alternate {
		visibility: visible!important;
		display: block!important;
		position: static!important;
		left: auto!important;
		top: auto!important;
		}
	
