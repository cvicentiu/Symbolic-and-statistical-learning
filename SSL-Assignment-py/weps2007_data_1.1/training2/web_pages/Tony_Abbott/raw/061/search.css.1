
/* Styles For Search Area */
#searchArea {
	width: 178px; 
	margin: 0; 
	position: relative; left: 10px;
	z-index:100;	
}
#searchArea A, #searchArea A:visited {
	font-size: 10px; color: white;
}
#searchArea A:hover, #searchArea A:active{
	font-size: 10px; color: #000;
}
#searchArea p {
	margin: 0; padding: 0;
}
#searchArea P.firstP {
	margin: 3px 0 2px 0;
}


