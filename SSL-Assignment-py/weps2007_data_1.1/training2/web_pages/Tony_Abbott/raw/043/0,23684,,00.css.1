/* adelaidenow print story */


.adspace-468x60,
#adspace-300x250,
.content-division.middle, 
.content-division.bottom,
.article-subcontent .content-panel,
.content-panel-storylinks,
#nav, 
#info-bar, 
#ninnbar, 
.skip, 
.right-content-column,
.content-panel-special,
.article-toolbar, 
#branding-wrap,
.adspace-wrap,
noscript,
.content-section,
.story-sponsor,
.foot-sponsor-area,
hr.end-story-content,
#footer ul,
#ticker,
hr.end-story,
.send-photo, 
.side-info,
.feature3,
.news-text-link,
.site-enhancers,
.site-enhancers-wrap,
#story-comments {
display: none !important; 
}


#image-lead {
display: block !important; 
}

body, p {
text-align: left;
font-family: Arial, Helvetica, sans-serif;
font-size: 11pt;
line-height:1.3;
color:#333;
}

p.author, p.published-date {
font-size:8pt;

font-weight:300;
margin:0;
}

p.author {
font-weight:700;
}

.article-source {
position:absolute;
right:0;

text-align:right;
top:1.3cm;
height:1cm;
padding-top:5pt;
padding-right:3.2cm;
font-size:7pt;
}

.article-source img {
position:absolute;
right:0;
top:0;
}


a:link {
color: #1b73a4;
text-decoration:none;
font-weight:700;
}

a:link:after, a:visited:after {
content: " (" attr(href) ") ";
font-weight:300;
color:#777;
font-size:10pt;
padding-left:10px;
font-style:italic;
text-decoration:none;
}

a#logo-small:after {
display:none;
}

a#logo-small {
margin-bottom:3pt;
}

a#logo-small,
a#logo-small img {
border:none;
text-decoration:none;
}

a#logo-small img {
display:none;
}

#print-logo {
display:block !important;
position:absolute;
top:0;
left:0;
width:10cm;
}

.article-header {
position:relative;
padding:0;
margin-top: 60pt;
_margin-top: 60pt;
}

.article-header h1 {
padding:0;
border-bottom:1px solid #dadada;
padding-bottom:3pt;
font-size: 20pt;
margin:6pt 0;

}


.article-header h1.no-border {
border:0;
font-style:italic;
}

.article-subcontent {
clear:both;
page-break-inside:avoid;
}

.article-subcontent table, 
.article-subcontent tr,
.article-subcontent td {
display:block;
}

.image-lead img,
.image-lead p {
display:block !important;
clear:none;
}

body.story .article-source {
float:right;
}


#image-lead table,
#image-lead p {
display:block !important;
clear:none;
margin:8pt 0;
font-size:8pt;
}

p.copyright {
display:block !important;
font-size:8pt;
text-align:center;
}


body.story {
padding-top:1.55cm;
padding-bottom:12pt;
background-color: #fff;
}